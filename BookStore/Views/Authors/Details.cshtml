@model BookStore.Models.Author

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>@Model.Name</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Biography)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Biography)
        </dd>

    </dl>
    <h4>Books by author</h4>
    <table class="table table-striped">
        <tr>
            <th></th>
            <th>
                Title
            </th>
            <th>
                Description
            </th>

            <th></th>
        </tr>

        @foreach (var item in Model.Books)
        {
            <tr>

                <td align="center"><img src="@item.ImageUrl" height="300px" width="220px"></td>


                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>


                <td>
                    
                    @Html.ActionLink("Edit", "Edit","Books", new { id = item.Id },null)
                    @Html.ActionLink("Details", "Details", "Books", new { id = item.Id },null)
                    @Html.ActionLink("Delete", "Delete", "Books", new { id = item.Id },null)
                </td>
            </tr>
        }

    </table>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Show all authors", "Index")
</p>
